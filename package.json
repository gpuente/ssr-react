{
  "name": "react-boiler",
  "version": "1.0.0",
  "description": "react boileplate",
  "main": "index.js",
  "scripts": {
    "dev": "npm run clean:build && npm run build-server && npm-run-all --parallel dev:*",
    "dev:build-server": "webpack --config config/webpack.server.js --watch",
    "dev:server": "nodemon --watch build --exec \"node build/server.js\"",
    "dev:build-client": "npm run clean && NODE_ENV=development webpack --config config/webpack.config.js",
    "build-server": "webpack --config config/webpack.server.js",
    "clean:build": "rimraf build",
    "build": "npm run clean && NODE_ENV=production webpack -p --config config/webpack.config.js",
    "build:development": "npm run clean && NODE_ENV=development webpack --config config/webpack.config.js",
    "clean": "rimraf public",
    "server": "NODE_ENV=development webpack-dev-server --inline --hot --config config/webpack.config.js",
    "start": "NODE_ENV=development webpack-dev-server --inline --hot --config config/webpack.config.js",
    "server:production": "npm run build && http-server-spa public",
    "deploy": "npm run build && surge --domain your-new-app-name.surge.sh -p public",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "react",
    "frontend",
    "boilerplate",
    "webpack",
    "mhr"
  ],
  "author": "Guillermo Puente <guillermo.ps09@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^7.2.3",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.3",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-react-jsx-img-import": "^0.1.4",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-1": "^6.24.1",
    "colors": "^1.1.2",
    "css-loader": "^0.28.7",
    "eslint": "^4.12.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.5.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.6",
    "html-webpack-plugin": "^2.30.1",
    "http-server-spa": "^1.2.0",
    "image-webpack-loader": "^3.4.2",
    "nodemon": "^1.14.8",
    "npm-run-all": "^4.1.2",
    "postcss-loader": "^2.0.9",
    "rimraf": "^2.6.2",
    "style-loader": "^0.19.0",
    "surge": "^0.19.0",
    "url-loader": "^0.6.2",
    "webpack": "^3.9.1",
    "webpack-dev-server": "^2.9.5",
    "webpack-merge": "^4.1.1"
  },
  "dependencies": {
    "animate.css": "^3.5.2",
    "bootstrap": "^4.0.0-beta.3",
    "express": "^4.16.2",
    "font-awesome": "^4.7.0",
    "jquery": "^3.2.1",
    "lodash": "^4.17.4",
    "popper.js": "^1.12.9",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "redux": "^3.7.2"
  }
}
